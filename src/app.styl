body
  margin: 0
  font-family: 'Helvetica Neue';

#app
  display: flex
  background: linear-gradient(to left, #ECE9E6 , #FFFFFF)
  height: 100vh
  width: 100vw

.movieDB__container
  display: flex
  justify-content: flex-end
  align-items: center
  width: 100%
  flex-direction: column

.movieDB__search
  width: 100%
  display: flex
  justify-content: flex-end
  align-items: center
  height: 200px
  flex-direction: column
  h1
    text-transform: uppercase;
    letter-spacing: 5px;
    color: #5d5d5d;
    border: 5px solid #9d9d9d;
    padding: 10px 15px;
    font-size: 17px;
    font-weight: 900;
    margin-bottom: 30px

  input
    transition: all .1s cubic-bezier(0.42, 0, 0.24, 1.13)
    filter: drop-shadow(0 1px 2px rgba(0,0,0,0.5))
    width: 92vw
    height: 50px
    font-size: 32px
    padding: 10px
    color: #555a5e
    outline: none
    &:focus
      filter: drop-shadow(0 7px 6px rgba(0,0,0,0.5))

.movieDB__movie-results
  display: flex
  overflow-y: scroll
  height: calc(100vh - 200px)
  ul
    display: flex
    align-items: center
    justify-content: center
    flex-wrap: wrap
    list-style: none
    padding-left: 0
    &.is-typing
      opacity: .8

    li
      width: 180px
      height: auto
      display: flex
      justify-content: center
      align-items: flex-end
      margin: 10px

      img
        transition: all 0.3s ease-in-out
        width: 100%
        filter: drop-shadow(0 1px 2px rgba(0,0,0,0.5))
        opacity: 0.7
        &:hover
          filter: drop-shadow(0 7px 6px rgba(0,0,0,0.5))
          transform: scale(1.02)
          opacity: 1

.movieDB__loader-container
  display: flex
  height: 80%
  width: 100%
  justify-content: center
  align-items: center
